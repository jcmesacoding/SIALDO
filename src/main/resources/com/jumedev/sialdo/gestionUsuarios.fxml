<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jumedev.sialdo.controllers.GestionUsuariosController">

    <TableView fx:id="tablaClientes" layoutX="14.0" layoutY="96.0" prefHeight="304.0" prefWidth="572.0">
        <columns>
            <TableColumn fx:id="colId" text="ID" />
            <TableColumn fx:id="colNombre" text="Nombre" />
            <TableColumn fx:id="colCiudad" text="Ciudad" />
            <TableColumn fx:id="colEdad" text="Edad" />
        </columns>
    </TableView>
    <TextField fx:id="txtBuscar" layoutX="14.0" layoutY="26.0" prefHeight="25.0" prefWidth="169.0" />
    <Button fx:id="btnBuscar" layoutX="195.0" layoutY="26.0" onAction="#buscarClientes" text="Buscar" />

    <TextField fx:id="txtNombre" layoutX="226.0" layoutY="59.0" prefHeight="25.0" prefWidth="156.0" promptText="Nombre" />
    <TextField fx:id="txtCiudad" layoutX="388.0" layoutY="59.0" prefHeight="25.0" prefWidth="130.0" promptText="Ciudad" />
    <Button fx:id="btnGuardar" layoutX="522.0" layoutY="59.0" onAction="#guardarCliente" text="Registrar" />

</AnchorPane>
