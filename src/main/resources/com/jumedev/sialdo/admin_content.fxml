<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jumedev.sialdo.controllers.AdminController">

    <!-- Panel izquierdo centrado -->
    <left>
        <StackPane prefWidth="200.0" BorderPane.alignment="CENTER">
            <VBox fx:id="sideMenu" alignment="CENTER" spacing="15" StackPane.alignment="CENTER">
                <Button fx:id="btnGestionUsuarios" onAction="#loadUsuarios" prefHeight="38.0" prefWidth="160.0" styleClass="btn-admin" text="Gestionar Usuarios" />
                <Button prefHeight="38.0" prefWidth="160.0" styleClass="btn-admin" text="Ver Estadísticas" />
                <Button prefHeight="38.0" prefWidth="160.0" styleClass="btn-admin" text="Configuraciones" />
            </VBox>
        </StackPane>
    </left>

    <!-- Contenedor dinámico donde se inyecta el contenido -->
    <center>
        <AnchorPane fx:id="mainContent" prefHeight="400.0" prefWidth="400.0" />
    </center>
</BorderPane>
