<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.jumedev.sialdo.controllers.MisDatosController"
            prefWidth="600.0" prefHeight="400.0">
    <children>
        <VBox alignment="TOP_LEFT" spacing="10" layoutX="30" layoutY="30">
            <Label text="Mis Datos" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <HBox spacing="10">
                <Label text="Nombre:" />
                <TextField fx:id="txtNombre" promptText="Tu nombre" />
            </HBox>
            <HBox spacing="10">
                <Label text="Correo:" />
                <TextField fx:id="txtCorreo" promptText="tu@email.com" />
            </HBox>
            <Button text="Guardar Cambios" onAction="#guardarCambios" />
        </VBox>
    </children>
</AnchorPane>
