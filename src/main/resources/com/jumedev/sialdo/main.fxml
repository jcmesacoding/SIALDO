            <TableColumn fx:id="colItem" text="Item" prefWidth="150" />
            <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Editar" onAction="#editarAlquiler" />
        <Button text="Eliminar" onAction="#eliminarAlquiler" />
    </HBox>
</VBox>
