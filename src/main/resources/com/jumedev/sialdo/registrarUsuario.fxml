<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jumedev.sialdo.controllers.RegistrarUsuarioController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Registrar nuevo usuario">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>

    <TextField fx:id="emailField" promptText="Correo electrónico" maxWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Contraseña" maxWidth="250"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirmar contraseña" maxWidth="250"/>

    <Button text="Registrar" onAction="#registrarUsuario" prefWidth="150"/>
</VBox>
